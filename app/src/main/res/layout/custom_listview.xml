<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp">

    <TextView
        android:id="@+id/textView_SubjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:text="Short Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_ShortName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_SubjectName"
        android:layout_marginStart="30sp"
        android:text="Subject Name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_Color"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_ShortName"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_SubjectName"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/textView_SubjectCoorinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ShortName"
        android:layout_below="@+id/textView_SubjectCode"
        android:text="Subject Coorinator"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_GF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ShortName"
        android:layout_below="@+id/textView_SubjectCoorinator"
        android:text="Guest Faculty"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonSubjectDelete"
        android:layout_width="wrap_content"
        android:layout_height="34sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_SubjectName"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_style"
        android:drawableRight="@drawable/ic_delete_24dp"
        android:padding="5sp"
        android:text="Delete"
        android:textColor="@android:color/background_light"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_SubjectCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_ShortName"
        android:layout_below="@+id/textView_ShortName"
        android:text="Subject Code"
        android:textSize="15sp" />
</RelativeLayout>